<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper
	namespace="org.spring.chat.mapper.UserMapper">
	<!-- 회원 가입 -->
	<insert id="insertUser"
		parameterType="org.spring.chat.model.UserVO">
			insert into chat.user
			(username, password)
			values
			(#{userId},#{password})
	</insert>
	
	<!-- 로그인 -->
	<select id="selectUser"
		parameterType="String"
		resultType="java.util.Map">
			select username, password from chat.user where username = #{userId} 
	</select>
</mapper>